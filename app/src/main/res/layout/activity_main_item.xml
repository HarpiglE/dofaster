<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/eight_dp"
    android:layout_marginLeft="@dimen/sixteen_dp"
    android:layout_marginRight="@dimen/sixteen_dp"
    android:layout_marginTop="@dimen/eight_dp">

    <ImageView
        android:id="@+id/game_pic"
        android:layout_width="0dp"
        android:layout_height="@dimen/games_pic_height"
        android:layout_marginBottom="@dimen/eight_dp"
        app:layout_constraintBottom_toTopOf="@id/game_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/game_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dimaesfahan"
        android:gravity="start"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/text"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/game_caption"
        app:layout_constraintLeft_toRightOf="@id/rank_list"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_pic" />

    <TextView
        android:id="@+id/game_caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/eight_dp"
        android:fontFamily="@font/dimaesfahan"
        android:gravity="start"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rank_list"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_title" />

    <ImageView
        android:id="@+id/rank_list"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/sixteen_dp"
        android:paddingRight="@dimen/sixteen_dp"
        android:src="@drawable/points_icon"
        android:tint="@color/text"
        app:layout_constraintBottom_toBottomOf="@id/game_caption"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/game_title"
        app:layout_constraintTop_toTopOf="@id/game_title" />

</android.support.constraint.ConstraintLayout>